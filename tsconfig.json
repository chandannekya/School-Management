{
  "compilerOptions": {
    "target": "es2016", // Compile to ES2016 JavaScript
    "module": "esnext", // Use ESNext modules
    "moduleResolution": "node", // Resolve modules like Node.js
    "esModuleInterop": true, // Ensure compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Output the compiled JavaScript to the `dist/` folder
    "rootDir": "./src" // Set the source directory to `src/`
  },
  "include": ["src/**/*.ts"], // Include all `.ts` files in `src/`
  "exclude": ["node_modules"] // Exclude `node_modules`
}
